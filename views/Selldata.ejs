<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SellFormdata</title>
        <style>
            body {
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
            overflow: scroll;
        }
        
a{
    color: white;
    text-decoration: none;
    padding: 0.6rem;
    border-radius: 0.3rem;
    background-color: green;
    position: relative;
    top: 1.3rem;
    left: 0.5rem;
}
        h2 {
            width: 100%;
            text-align: center;
            text-transform: capitalize;
            margin-top: 1rem;
            font-size: 2rem;
            letter-spacing: 0.1rem;
        }

        input {
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            border: 2px solid black;
            border-radius: 20px;
            padding: 0.7rem 3rem 0.7rem 1rem;
            width: 300px;
            outline: none;
            transition: 0.3s ease-in-out;
        }

        input[type="search"]::placeholder {
            font-size: 0.9rem;
        }

        input:focus {
            border-color: rgba(0, 0, 0, 0.339);

        }

        table{
            overflow: scroll !important;
        }

        table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  white-space: nowrap;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: center;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
    </style>
    </head>

    <body>
        <a
            href="/admin/collection-ensureIndex/kira-yagami-082561-lira-Integrate-page-of-admin-931249/success"
            role="button">Go tO Home</a>
        <h2>sell Form data All user</h2>
        <input type="search" placeholder="Enter telegramUsername | email " id="userSearch"
            oninput="searchUsers()">
        <h1 class="h1" style="text-align: center; margin-top: 1rem;"></h1>
        <table class="zigzag" id="userTable">
            <thead>
                <br>
                <tr>
                    <th class="header">Telegram Username</th>
                    <th class="header">Email</th>
                    <th class="header">Number</th>
                    <th class="header">Account Name</th>
                    <th class="header">Account Type</th>
                    <th class="header">Account Age</th>
                    <th class="header">Account Url</th>
                    <th class="header">Account Desccrption</th>
                    <th class="header">Monetization</th>
                    <th class="header">Account Image</th>
                    <th class="header">Payment Method</th>
                    <th class="header">submit time</th>
                </tr>
            </thead>
            <% sells.forEach(function(user) { %>
            <tr class="table-row">
                <td class="col col-10" data-label="User Telegram">
                    <%= user.telegramUsername %>
                </td>
                <td class="col col-1" data-label="User Email">
                    <%= user.email %>
                </td>
                
                <td class="col col-9" data-label="User Cont No.">
                    <%= user.contactNumber %>
                </td>
                <td class="col col-2" data-label="Acc Name">
                    <%= user.accountName %>
                </td>
                <td class="col col-3" data-label="Acc Type">
                    <%= user.accountType %>
                </td>
                <td class="col col-4" data-label="Acc Age">
                    <%= user.accountAge %>
                </td>
                <td class="col col-5" data-label="Acc Url">
                    <%= user.accountUrl %>
                </td>
                <td class="col col-6" data-label="Acc desc">
                    <%= user.accountDesc %>
                </td>
                <td class="col col-7" data-label="Acc Monetization">
                    <%= user.monetizationEnabled %>
                </td>
                <td class="col col-8" data-label="Acc Img">
                    <%= user.accountImage %>
                </td>
                <td class="col col-11" data-label="Payment Method">
                    <%= user.paymentMethod %>
                </td>
            
             

                <td class="col col-12" data-label="Submit form Time">
                    <%= user.createdAt %>
                </td>
            </tr>
            <% }); %>
        </table>
        <script>
            function searchUsers() {
                var input, filter, table, tr, tdUsername, tdEmail, i, txtValueUsername, txtValueEmail;
                input = document.getElementById("userSearch");
                filter = input.value.toUpperCase();
                table = document.getElementById("userTable");
                tr = table.getElementsByTagName("tr");
        
                for (i = 0; i < tr.length; i++) {
                    tdUsername = tr[i].getElementsByTagName("td")[0]; // Assuming Telegram username is in the 11th cell
                    tdEmail = tr[i].getElementsByTagName("td")[1]; // Assuming email is in the 9th cell
        
                    if (tdUsername && tdEmail) { // Check if both Telegram username and email cells exist
                        txtValueUsername = tdUsername.textContent || tdUsername.innerText;
                        txtValueEmail = tdEmail.textContent || tdEmail.innerText;
        
                        // Check if the input matches either Telegram username or email
                        if (
                            txtValueUsername.toUpperCase().indexOf(filter) > -1 ||
                            txtValueEmail.toUpperCase().indexOf(filter) > -1
                        ) {
                            tr[i].style.display = "";
                        } else {
                            tr[i].style.display = "none";
                        }
                    }
                }
            }
        </script>
        
            
            
        <script>
        // Count the total number of rows in the table
        var totalAccounts = document.querySelectorAll('#userTable tbody tr').length;

        // Update the content of the h1 element with the total count
        document.querySelector('h1').innerText = 'Total Users from Submit : ' + totalAccounts;
    </script>

    </body>

</html>