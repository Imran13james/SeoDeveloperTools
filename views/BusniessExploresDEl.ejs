<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Delete User Form</title>
</head>
<body>

  <h1>Delete User</h1>

  <form id="deleteUserForm">
    <label for="email">Enter User Email:</label>
    <input type="email" id="email" name="email" required>
    <button type="submit">Delete User</button>
  </form>

  <div id="resultMessage"></div>
  <style>
    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  
    h1 {
      text-align: center;
      font-size: 2rem;
      text-transform: capitalize;
      /* margin-top: 5rem; */
      color: black;
      letter-spacing: 0.2rem;
      font-weight: 600;
    }
  
    form {
      display: flex;
      flex-direction: column;
      width: 280px;
      margin: 10px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      line-height: 2rem;
      outline: none;
      transition: 0.3s ease-in-out;
      cursor: pointer;
    }
  
    form:hover {
      box-shadow: rgba(238, 233, 233, 0.19) 0px 10px, rgba(219, 212, 212, 0.498) 0px 6px 6px;
    }
  
    form select {
      padding: 0.5rem 1rem;
      border-radius: 0.2rem;
      cursor: pointer;
      font-size: 0.8rem;
      font-weight: 700;
    }
  
    textarea,
    select:hover {
      border-color: black;
    }
  
    label {
      display: block;
      font-size: 1rem;
      text-transform: capitalize;
      font-weight: 600;
      margin-bottom: 5px;
      color: black;
    }
  
    select,
    textarea {
      border: 2px solid rgba(0, 0, 0, 0.324);
      transition: 0.3s ease-in-out;
    }
  
    textarea {
      height: 8rem;
      width: 100%;
      resize: none;
    }
  
    input[type="text"] {
      width: 100%;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }
  
    button[type="submit"] {
      margin-top: 10px;
      padding: 10px;
      border: none;
      cursor: pointer;
      background-color: #007bff;
      color: #fff;
      transition: 0.3s ease-in-out;
      border-radius: 5px;
      font-size: 1rem;
      font-weight: 700;
    }
  
  
    input[type="text"]:focus {
      outline: none;
      border: 2px solid #007bff;
    }
  
    button[type="submit"]:hover {
      background-color: #0069d9;
    }
  </style>
  <script>
    document.getElementById('deleteUserForm').addEventListener('submit', function(event) {
      event.preventDefault();
      
      const email = document.getElementById('email').value;
      if (!isValidEmail(email)) {
        document.getElementById('resultMessage').innerText = 'Invalid email format.';
        return;
      }

      // AJAX request to delete user
      fetch(`/BusnessModel/${email}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          document.getElementById('resultMessage').innerText = `Error: ${data.error}`;
        } else {
          document.getElementById('resultMessage').innerText = 'User deleted successfully.';
        }
      })
      .catch(error => {
        document.getElementById('resultMessage').innerText = 'Internal Server Error';
        console.error('Error deleting user:', error);
      });
    });

    function isValidEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }
  </script>

</body>
</html>
