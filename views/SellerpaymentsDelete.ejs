<!DOCTYPE html>
<html>
<head>
    <title>Delete Seller Payment Form</title>
    <style>
        .message{
          text-align: center;
          color: red;
          text-transform: capitalize;
        }
        
        a {
            color: white;
            text-decoration: none;
            padding: 0.6rem;
            border-radius: 0.3rem;
            background-color: green;
            position: relative;
            top: 1rem;
            left: 1rem;
        }
        body {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }
      
        h1 {
          text-align: center;
          font-size: 2rem;
          text-transform: capitalize;
          /* margin-top: 5rem; */
          color: black;
          letter-spacing: 0.2rem;
          font-weight: 600;
        }
      
        form {
          display: flex;
          flex-direction: column;
          width: 280px;
          margin: 10px auto;
          padding: 20px;
          border: 1px solid #ccc;
          border-radius: 5px;
          line-height: 2rem;
          outline: none;
          transition: 0.3s ease-in-out;
          cursor: pointer;
        }
      
        form:hover {
          box-shadow: rgba(238, 233, 233, 0.19) 0px 10px, rgba(219, 212, 212, 0.498) 0px 6px 6px;
        }
      
        form select {
          padding: 0.5rem 1rem;
          border-radius: 0.2rem;
          cursor: pointer;
          font-size: 0.8rem;
          font-weight: 700;
        }
      
        textarea,
        select:hover {
          border-color: black;
        }
      
        label {
          display: block;
          font-size: 1rem;
          text-transform: capitalize;
          font-weight: 600;
          margin-bottom: 5px;
          color: black;
        }
      
        select,
        textarea {
          border: 2px solid rgba(0, 0, 0, 0.324);
          transition: 0.3s ease-in-out;
        }
      
        textarea {
          height: 8rem;
          width: 100%;
          resize: none;
        }
      
        input[type="text"] {
          width: 100%;
          padding: 5px;
          border: 1px solid #ccc;
          border-radius: 3px;
        }
      
        button[type="button"] {
          margin-top: 10px;
          padding: 10px;
          border: none;
          cursor: pointer;
          background-color: #007bff;
          color: #fff;
          transition: 0.3s ease-in-out;
          border-radius: 5px;
          font-size: 1rem;
          font-weight: 700;
        }
      
      
        input[type="text"]:focus {
          outline: none;
          border: 2px solid #007bff;
        }
      
        button[type="button"]:hover {
          background-color: #0069d9;
        }
      </style>
</head>

<body>
    <h1>Delete SellerPaymentForm by User Email Address</h1>
    <a
    href="/admin/collection-ensureIndex/kira-yagami-082561-lira-Integrate-page-of-admin-931249/success"
    style="text-decoration: none;">Go to Home</a>
  

    <form id="deleteUserForm" action="/SellerPayment-form/:emailAddress" method="POST">
        <label for="email">Enter Email to Delete:</label>
        <input type="email" id="email" name="email" required>
        <button type="button" onclick="deleteForm()">Delete</button>
    </form>


    <div id="message" class="message"></div>


    <script>
        async function deleteForm() {
            const email = document.getElementById('email').value;
            const messageDiv = document.getElementById('message');
            messageDiv.innerHTML = ''; // Clear previous messages

            try {
                const response = await fetch('/SellerPayment-form/' + encodeURIComponent(email), {
                    method: 'DELETE',
                });

                const data = await response.json();

                if (response.ok) {
                    messageDiv.innerHTML = `<p class="success">${data.message}</p>`;
                } else {
                    messageDiv.innerHTML = `<p class="error">${data.message}</p>`;
                }
            } catch (error) {
                messageDiv.innerHTML = `<p class="error">Error deleting BuyerForm</p>`;
            }
        }
    </script>
</body>
</html>

